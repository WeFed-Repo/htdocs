/*
CSS relativo a:
sicurezza.html -> Sicurezza                            
minacce-del-web.html -> Sicurezza - Le minacce del web 
*/

.sicurezza.basic-content {margin: 0}
.sicurezza.basic-content.content{background: #fff url(/wbresp/img/sicurezza/sicurezza_bg.jpg)0 0 no-repeat;background-size:100%;float:left;}
.sicurezza.basic-content.content .small-content{padding:0 50px;overflow:hidden;}
.sicurezza.basic-content.content .bcrumbs{margin:10px 0 40px 0;}
.sicurezza.basic-content.content p{color:#999999;}
.sicurezza.basic-content.content p b{color:#666666;}
.sicurezza.basic-content.content h3{font-size:32px;text-transform:uppercase; }
.sicurezza.basic-content.content h4{font-size:14px;text-transform:uppercase; }
.sicurezza.basic-content.content .small-content.blocco2 h4{margin-top: 45px}
.sicurezza.basic-content.content .small-content.blocco3 h4{margin-top: 40px}
.sicurezza.basic-content.content ul.featlist {color: #999999; font-size:16px; padding: 0 0 0 40px; list-style:none; margin-top:6px;margin-bottom:10px}
.sicurezza.basic-content.content .featlist li {text-indent: -10px;}
.sicurezza.basic-content.content .featlist li:before { content: "\2022   "; color:#a6cc28;}

.minacce-del-web.basic-content {margin: 0}
.minacce-del-web.basic-content.content{background: #fff url(/wbresp/img/sicurezza/sicurezza_bg.jpg)0 0 no-repeat;background-size:100%;float:left;}
.minacce-del-web.basic-content.content .small-content{padding:0 50px;overflow:hidden;}
.minacce-del-web.basic-content.content .bcrumbs{margin:10px 0 40px 0;}
.minacce-del-web.basic-content.content p{color:#999999;}
.minacce-del-web.basic-content.content p b{color:#666666;}
.minacce-del-web.basic-content.content h3{font-size:32px;text-transform:uppercase; }
.minacce-del-web.basic-content.content h4{font-size:14px;text-transform:uppercase;margin-top:40px; }
.minacce-del-web.basic-content.content h5{color:#999999;font-size:16px;font-family:'ralewaybold',arial;}
.minacce-del-web.basic-content.content ul.featlist {color: #999999; font-size:16px; padding: 0 0 0 40px; list-style:none; margin-top:6px;margin-bottom:10px}
.minacce-del-web.basic-content.content .featlist li {text-indent: -10px;}
.minacce-del-web.basic-content.content .featlist li:before { content: "\2022   "; color:#a6cc28;}

@media (max-width: 767px) {
	.sicurezza.basic-content.content .small-content{padding:0 10px;overflow:hidden;}
	.minacce-del-web.basic-content.content .small-content{padding:0 10px;overflow:hidden;}
}

@media (max-width: 768px) {
	.sicurezza.basic-content.content .small-content.blocco2 h4{margin-top: 25px}
	.sicurezza.basic-content.content .small-content.blocco3 h4{margin-top: 25px}
	.sicurezza.basic-content.content .small-content.blocco4 h4{margin-top: 25px}
	.minacce-del-web.basic-content.content .small-content {padding:0;}
	
}

@media screen and (min-width: 768px) and (max-width: 991px) {
	.sicurezza.basic-content.content .small-content.blocco2 h4{margin-top: 75px}
	.sicurezza.basic-content.content .small-content.blocco3 h4{margin-top: 50px}
	.sicurezza.basic-content.content .small-content.blocco4 h4{margin-top: 40px}
}

@media screen and (min-width: 991px) and (max-width: 1200px) {
	.sicurezza.basic-content.content .small-content.blocco2 h4{margin-top: 115px}
	.sicurezza.basic-content.content .small-content.blocco3 h4{margin-top: 130px}
	.sicurezza.basic-content.content .small-content.blocco4 h4{margin-top: 140px}
}